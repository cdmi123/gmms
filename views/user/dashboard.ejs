<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>GMMS - Gold Premium Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&family=Inter:wght@400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/gold_biscuits.png" type="image/png">
</head>

<body class="dashboard-body">

    <!-- Desktop Header -->
    <header class="desktop-header d-none d-lg-flex animate-down">
        <div class="logo-area">
            <i class="bi bi-gem text-gold fs-2 me-2"></i>
            <div>
                <h1 class="m-0 fw-bold text-gold ls-2">GOLD MANDAL</h1>
                <small class="text-white-50 ls-widest">PREMIUM MEMBER</small>
            </div>
        </div>
        <div class="header-stats d-flex gap-4">
            <div class="h-stat-box">
                <span class="lbl"><i class="bi bi-trophy-fill text-gold me-1"></i>Last Winner</span>
                <span class="val text-truncate" style="max-width: 150px;">
                    <%= currentDraw ? currentDraw.winnerId.name : 'Waiting...' %>
                </span>
            </div>
            <div class="h-stat-box">
                <span class="lbl"><i class="bi bi-box-seam-fill text-gold me-1"></i>Stock</span>
                <span class="val">
                    <% if (locals.stocks) { %>
                        <% stocks.forEach(s=> { %>
                            <%= s.quantity %>x <%= s.weight %>g
                                    <% }) %>
                                        <% } %>
                </span>
            </div>
        </div>
    </header>

    <!-- Mobile Top Bar (Stories Style) -->
    <div class="mobile-stories-bar d-lg-none py-3 px-2 overflow-auto d-flex gap-3">
        <div class="story-circle active">
            <div class="ring"><i class="bi bi-star-fill text-gold"></i></div>
            <span>Live</span>
        </div>
        <% if (recentDraws && recentDraws.length> 0) { %>
            <% recentDraws.slice(0, 5).forEach(d=> { %>
                <div class="story-circle">
                    <div class="ring"><img src="/images/gold_biscuits.png" alt="Winner"></div>
                    <span>
                        <%= d.winnerId.name.split(' ')[0] %></span>
                </div>
            <% }) %>
        <% } %>
    </div>

    <div class="main-container container-fluid p-0 p-lg-4">
        
        <!-- Three Column Layout -->
        <div class="row g-4 m-0 h-100">
            
            <!-- COLUMN 1: STATS & PAYMENTS (Left) -->
            <div class="col-lg-3 d-none d-lg-block animate-left h-100">
                <div class="glass-panel h-100 d-flex flex-column gap-3 p-4">
                    <h5 class="text-gold text-uppercase ls-1 mb-4"><i class="bi bi-bar-chart-fill me-2"></i>Analytics</h5>
                    
                    <div class="stat-tile">
                        <div class="icon"><i class="bi bi-currency-rupee"></i></div>
                        <div>
                            <div class="lbl">Total Collection</div>
                            <div class="val text-white" id="stat-col-1">â‚¹<%= stats.totalCollectionAmount.toLocaleString() %></div>
                        </div>
                    </div>

                    <div class="stat-tile">
                        <div class="icon"><i class="bi bi-check-circle"></i></div>
                        <div>
                            <div class="lbl">Paid Members</div>
                            <div class="val text-white" id="stat-pd-1"><%= stats.paidCount %> / <%= stats.totalMembers %></div>
                        </div>
                    </div>

                    <div class="mt-auto">
                        <h6 class="text-white-50 border-bottom border-white-10 pb-2 mb-3">Live Payment Feed</h6>
                        <div class="mini-payment-list custom-scroll" style="max-height: 250px; overflow-y: auto;">
                             <% if (locals.payments && payments.length > 0) { %>
                                <% payments.slice(0, 10).forEach(p => { %>
                                    <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded bg-white-05">
                                        <span class="small text-white"><%= p.memberId.name.split(' ')[0] %></span>
                                        <span class="badge <%= p.status===' paid'?'bg-success':'bg-warning text-dark'%>
                            rounded-pill scale-75"><%= p.status %>
                    </span>
                </div>
                <% }) %>
                    <% } else { %>
                        <div class="text-center small text-muted">No data</div>
                        <% } %>
    </div>
    </div>
    </div>
    </div>

    <!-- COLUMN 2: CENTER STAGE (Winner) -->
    <div id="section-home" class="col-lg-6 col-12 section-view active animate-zoom">
        <!-- Mobile Welcome -->
        <div class="d-lg-none text-center mb-4 mt-2">
            <h2 class="fw-bold text-white">Gold Mandal</h2>
            <p class="text-white-50 small">Premium Membership</p>
        </div>

        <div
            class="winner-main-card glass-panel-gold border-gold p-4 p-md-5 text-center position-relative overflow-hidden">
            <div class="shine-effect"></div>

            <div class="round-badge">
                <%= activeRound ? 'Round ' + activeRound.roundNumber : 'Off Season' %>
            </div>

            <% if (currentDraw) { %>
                <div class="winner-content animate-up">
                    <div class="crown-icon mb-3"><i class="bi bi-gem text-gold display-1 filter-glow"></i></div>
                    <div class="gold-amount-tag mb-2">
                        <%= currentDraw.goldWeight %>g PURE GOLD
                    </div>
                    <h1 class="winner-name-lg text-white fw-bold mb-1">
                        <%= currentDraw.winnerId.name %>
                    </h1>
                    <p class="winner-id-lg text-gold font-monospace fs-5 mb-4">
                        <%= currentDraw.winnerId.phone %>
                    </p>

                    <div class="draw-counter-badge mb-4">
                        <span>Draw <%= stats.totalDrawsInRound %> of 3</span>
                    </div>
                </div>
                <% } else { %>
                    <div class="waiting-content py-5 animate-pulse">
                        <i class="bi bi-hourglass-top text-white-50 display-1 mb-4"></i>
                        <h2 class="text-white fw-light">Waiting for Draw...</h2>
                        <p class="text-white-50">Stay tuned for the next lucky winner!</p>
                    </div>
                    <% } %>

                        <!-- Mobile Inline Stats -->
                        <div class="row g-2 mt-4 d-lg-none">
                            <div class="col-6">
                                <div class="bg-white-10 rounded p-2">
                                    <small class="text-white-50 d-block">Collection</small>
                                    <strong class="text-gold">â‚¹<%= stats.totalCollectionAmount.toLocaleString() %>
                                    </strong>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-white-10 rounded p-2">
                                    <small class="text-white-50 d-block">Paid</small>
                                    <strong class="text-white">â‚¹<%= stats.totalPaidAmount.toLocaleString() %></strong>
                                </div>
                            </div>
                        </div>
        </div>
    </div>

    <!-- COLUMN 3: HISTORY (Right) - Mobile separate section -->
    <div id="section-history" class="col-lg-3 col-12 section-view d-lg-block animate-right">
        <div class="glass-panel h-100 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="text-gold text-uppercase ls-1 m-0">History</h5>
                <span class="badge bg-gold text-dark">
                    <%= stats.totalDrawsCompleted %> Total
                </span>
            </div>

            <div class="matches-list custom-scroll" style="height: calc(100vh - 200px); overflow-y: auto;">
                <% if (recentDraws && recentDraws.length> 0) { %>
                    <% recentDraws.forEach((draw, i)=> { %>
                        <div class="match-card mb-3 animate-up" style="animation-delay: <%= i*0.1 %>s">
                            <div class="d-flex align-items-center gap-3">
                                <div class="m-date">
                                    <span class="d-block fw-bold display-6 text-white-50">
                                        <%= new Date(draw.drawDate).getDate() %>
                                    </span>
                                    <small class="text-uppercase">
                                        <%= new Date(draw.drawDate).toLocaleString('default', { month: 'short' }) %>
                                    </small>
                                </div>
                                <div class="m-info border-start border-white-10 ps-3">
                                    <h6 class="text-white m-0">
                                        <%= draw.winnerId.name %>
                                    </h6>
                                    <small class="text-gold">
                                        <%= draw.goldWeight %>g Gold Prize
                                    </small>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="text-center text-white-50 py-5">No history yet</div>
                                <% } %>
            </div>
        </div>
    </div>

    <!-- Mobile Section: Stats (Hidden on Desktop) -->
    <div id="section-stats" class="col-12 section-view d-lg-none">
        <div class="glass-panel p-4">
            <h3 class="text-white mb-4">Full Analytics</h3>
            <!-- Reusing stats content for mobile -->
            <ul class="list-group list-group-flush bg-transparent">
                <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                    <span>Total Collection</span>
                    <span class="fw-bold text-gold">â‚¹<%= stats.totalCollectionAmount.toLocaleString() %></span>
                </li>
                <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                    <span>Total Paid Amount</span>
                    <span class="fw-bold text-gold">â‚¹<%= stats.totalPaidAmount.toLocaleString() %></span>
                </li>
                <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                    <span>Per Member</span>
                    <span class="fw-bold">â‚¹<%= stats.perMemberAmount.toLocaleString() %></span>
                </li>
            </ul>

            <h5 class="text-white mt-5 mb-3">All Payments</h5>
            <div class="mobile-pay-list">
                <% if (locals.payments) { %>
                    <% payments.forEach(p=> { %>
                        <div class="d-flex justify-content-between py-2 border-bottom border-white-10">
                            <span class="text-white-50">
                                <%= p.memberId.name %>
                            </span>
                            <span class="<%= p.status==='paid'?'text-success':'text-warning' %>">
                                <%= p.status.toUpperCase() %>
                            </span>
                        </div>
                        <% }) %>
                            <% } %>
            </div>
        </div>
    </div>

    </div>
    </div>

    <!-- Mobile Bottom Navigation -->
    <nav class="mobile-bottom-nav d-lg-none">
        <a href="#" class="nav-item active" onclick="switchSection('home', event)">
            <i class="bi bi-house-door-fill"></i>
            <span>Home</span>
        </a>
        <a href="#" class="nav-item" onclick="switchSection('stats', event)">
            <i class="bi bi-bar-chart-fill"></i>
            <span>Stats</span>
        </a>
        <a href="#" class="nav-item" onclick="switchSection('history', event)">
            <i class="bi bi-clock-history"></i>
            <span>History</span>
        </a>
    </nav>

    <!-- Celebration Modal (Preserved) -->
    <div class="modal fade" id="celebrationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content bg-transparent border-0">
                <div class="modal-body p-0 d-flex flex-column align-items-center justify-content-center text-center"
                    style="background: rgba(0,0,0,0.95);">

                    <div id="user-suspense-container" class="w-100">
                        <div class="spinner-border text-gold mb-5" role="status"
                            style="width: 6rem; height: 6rem; --bs-spinner-border-width: 0.5rem;"></div>
                        <h1
                            class="display-4 text-white fw-bold animate__animated animate__pulse animate__infinite ls-2">
                            CHOOSING<br><span class="text-gold">WINNER</span></h1>
                    </div>

                    <div id="user-winner-reveal-container" class="d-none w-100 position-relative">
                        <div class="ribbon-banner mb-5 animate__animated animate__zoomInDown">
                            <h1 class="display-1 fw-bold text-white text-uppercase"
                                style="text-shadow: 0 0 30px #FFD700;">CONGRATS!</h1>
                        </div>

                        <div class="winner-circle animate__animated animate__zoomIn">
                            <i class="bi bi-gem text-gold mb-3 filter-glow" style="font-size: 6rem;"></i>
                            <h2 class="winner-title text-white mb-2 ls-2">WINNER <span id="u-winner-index"
                                    class="text-gold">#1</span></h2>
                            <h1 class="winner-name-display display-2 fw-bold text-white mb-3" id="u-winner-name">Name
                            </h1>
                            <p class="fs-3 text-gold opacity-75 font-monospace" id="u-winner-phone">Phone</p>
                        </div>
                    </div>

                    <div id="user-all-winners-list" class="d-none w-100 mt-5 container" style="max-width: 600px;">
                        <h2 class="text-gold mb-4 fw-bold ls-1">THE LUCKY STARS</h2>
                        <ul class="list-group bg-transparent" id="u-winners-ul">
                        </ul>
                        <div class="text-center mt-5">
                            <button class="btn btn-gold btn-lg rounded-pill px-5 fw-bold shadow-lg text-dark"
                                onclick="location.reload()">
                                <i class="bi bi-arrow-repeat me-2"></i> CONTINUE
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Mobile Navigation Logic
        function switchSection(sectionId, event) {
            // Prevent default link behavior
            if (event) {
                event.preventDefault();
            }

            // Hide all sections
            document.querySelectorAll('.section-view').forEach(el => {
                el.classList.remove('active', 'd-block');
                if (window.innerWidth < 992) el.classList.add('d-none'); // Force hide on mobile
            });

            // Show target section
            const target = document.getElementById('section-' + sectionId);
            if (target) {
                target.classList.remove('d-none');
                target.classList.add('active', 'd-block');
            }

            // Update Nav Icons
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            if (event && event.currentTarget) {
                event.currentTarget.classList.add('active');
            } else {
                // Fallback for initial load if no event
                const defaultNavItem = document.querySelector(`.nav-item[onclick*="switchSection('${sectionId}')"]`);
                if (defaultNavItem) {
                    defaultNavItem.classList.add('active');
                }
            }
        }

        // Initialize for Mobile: Ensure only Home is visible initially
        if (window.innerWidth < 992) {
            switchSection('home');
        }

        /* -----------------------------------------------------------
           Socket & Celebration Logic (Preserved)
           ----------------------------------------------------------- */
        if (typeof socket !== 'undefined') {
            socket.on('dashboardUpdate', async (data) => {
                handleDashboardUpdate(data);
            });

            socket.on('drawReveal', async (data) => {
                console.log('ðŸŽ‰ Draw Reveal Triggered:', data);
                if (data.winners && data.winners.length > 0) {
                    startCelebrationSequence(data.winners);
                }
            });
        }

        async function handleDashboardUpdate(data) {
            // Reload page to fetch fresh EJS render data for simplicity in this redesign
            // Or implement a full DOM update function like before if smooth refresh is preferred.
            // Given the complex structure change, a reload is safer to ensure consistency unless specific granular updates are rewritten.
            // For now, let's try to update key elements to avoid flash, but fallback to reload if complex.
            location.reload();
        }

        async function startCelebrationSequence(winners) {
            const celebrationModal = new bootstrap.Modal(document.getElementById('celebrationModal'));
            const suspenseContainer = document.getElementById('user-suspense-container');
            const winnerReveal = document.getElementById('user-winner-reveal-container');
            const winnerNameEl = document.getElementById('u-winner-name');
            const winnerPhoneEl = document.getElementById('u-winner-phone');
            const winnerIndexEl = document.getElementById('u-winner-index');
            const allWinnersList = document.getElementById('user-all-winners-list');
            const winnersUl = document.getElementById('u-winners-ul');

            celebrationModal.show();

            for (let i = 0; i < winners.length; i++) {
                const winner = winners[i];

                suspenseContainer.classList.remove('d-none');
                winnerReveal.classList.add('d-none');

                await new Promise(r => setTimeout(r, 5000));

                suspenseContainer.classList.add('d-none');
                winnerReveal.classList.remove('d-none');

                winnerIndexEl.innerText = "#" + (i + 1);
                winnerNameEl.innerText = winner.winnerId.name;
                winnerPhoneEl.innerText = winner.winnerId.phone;

                fireConfetti();

                const li = document.createElement('li');
                li.className = 'list-group-item bg-black-50 text-white border-gold-50 d-flex justify-content-between align-items-center mb-3 rounded p-3';
                li.innerHTML = `<span class="fs-4 fw-bold"><span class="text-gold me-3">#${i + 1}</span> ${winner.winnerId.name}</span> <i class="bi bi-gem text-gold"></i>`;
                winnersUl.appendChild(li);

                await new Promise(r => setTimeout(r, 5000));
            }

            winnerReveal.classList.add('d-none');
            allWinnersList.classList.remove('d-none');
            fireConfetti();
        }

        function fireConfetti() {
            var duration = 3 * 1000;
            var animationEnd = Date.now() + duration;
            var defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 9999, colors: ['#FFD700', '#FFA500', '#ffffff'] };

            function random(min, max) { return Math.random() * (max - min) + min; }

            var interval = setInterval(function () {
                var timeLeft = animationEnd - Date.now();
                if (timeLeft <= 0) return clearInterval(interval);
                var particleCount = 50 * (timeLeft / duration);
                confetti(Object.assign({}, defaults, { particleCount, origin: { x: random(0.1, 0.3), y: Math.random() - 0.2 } }));
                confetti(Object.assign({}, defaults, { particleCount, origin: { x: random(0.7, 0.9), y: Math.random() - 0.2 } }));
            }, 250);
        }
    </script>
</body>

</html>