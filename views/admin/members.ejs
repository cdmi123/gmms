<%- include('../partials/header') %>
    <div class="admin-wrapper admin-light-body">
        <%- include('../partials/sidebar') %>
            <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

            <div class="admin-main-content">
                <!-- Mobile Nav -->
                <div class="admin-mobile-nav">
                    <div class="d-flex align-items-center">
                        <button class="btn p-0 me-3" onclick="toggleSidebar()">
                            <i class="bi bi-list fs-3"></i>
                        </button>
                        <h5 class="mb-0 fw-bold">GMMS Admin</h5>
                    </div>
                </div>

                <div class="p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="text-blue fw-bold mb-0">Manage Members</h2>
                            <p class="text-muted small">Overview of all registered GMMS members</p>
                        </div>
                        <button class="btn btn-blue shadow" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                            <i class="bi bi-person-plus-fill me-2"></i> <span class="d-none d-sm-inline">Add New
                                Member</span>
                        </button>
                    </div>

                    <div class="admin-light-card">
                        <div class="table-responsive">
                            <table class="table admin-light-table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Full Name</th>
                                        <th class="d-none d-md-table-cell">Phone Number</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% members.forEach((member, index)=> { %>
                                        <tr>
                                            <td class="text-muted">
                                                <%= index + 1 %>
                                            </td>
                                            <td class="fw-bold text-blue">
                                                <%= member.name %>
                                                    <% if (winnerIds.has(member._id.toString())) { %>
                                                        <span class="ms-1 badge bg-warning text-dark rounded-pill"
                                                            title="Luck Winner" style="font-size: 0.55rem;">
                                                            <i class="bi bi-trophy-fill"></i>
                                                        </span>
                                                        <% } %>
                                            </td>
                                            <td class="text-muted d-none d-md-table-cell">
                                                <%= member.phone %>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge bg-<%= member.status === 'active' ? 'success' : 'danger' %> rounded-pill px-3">
                                                    <%= member.status %>
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary border-0"
                                                    onclick="editMember('<%= member._id %>', '<%= member.name %>', '<%= member.phone %>', '<%= member.status %>')">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                <a href="/admin/members/delete/<%= member._id %>"
                                                    class="btn btn-sm btn-outline-danger border-0 ms-1"
                                                    onclick="return confirm('Are you sure you want to delete this member?')">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% if (members.length===0) { %>
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted py-5">
                                                        No members found. Use the button above to add members.
                                                    </td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <!-- Add Member Modal -->
    <div class="modal fade" id="addMemberModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <form action="/admin/members/add" method="POST">
                    <div class="modal-header bg-blue text-white">
                        <h5 class="modal-title fw-bold">New Member Details</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div class="mb-4">
                            <label class="form-label text-muted fw-bold">Full Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter member name"
                                required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label text-muted fw-bold">Phone Number</label>
                            <input type="text" class="form-control" name="phone" placeholder="Enter phone number"
                                required>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-blue px-4">Register Member</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Member Modal -->
    <div class="modal fade" id="editMemberModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <form action="/admin/members/update" method="POST">
                    <input type="hidden" name="id" id="edit_id">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title fw-bold">Edit Member Information</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div class="mb-4">
                            <label class="form-label text-muted fw-bold">Full Name</label>
                            <input type="text" class="form-control" name="name" id="edit_name" required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label text-muted fw-bold">Phone Number</label>
                            <input type="text" class="form-control" name="phone" id="edit_phone" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label text-muted fw-bold">Account Status</label>
                            <select class="form-select" name="status" id="edit_status">
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4">Update Member</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function editMember(id, name, phone, status) {
            document.getElementById('edit_id').value = id;
            document.getElementById('edit_name').value = name;
            document.getElementById('edit_phone').value = phone;
            document.getElementById('edit_status').value = status;
            new bootstrap.Modal(document.getElementById('editMemberModal')).show();
        }
    </script>
    <%- include('../partials/footer') %>