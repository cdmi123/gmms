<%- include('../partials/header') %>
    <div class="admin-wrapper admin-light-body">
        <%- include('../partials/sidebar') %>
            <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

            <div class="admin-main-content">
                <!-- Mobile Nav -->
                <div class="admin-mobile-nav">
                    <div class="d-flex align-items-center">
                        <button class="btn p-0 me-3" onclick="toggleSidebar()">
                            <i class="bi bi-list fs-3"></i>
                        </button>
                        <h5 class="mb-0 fw-bold">GMMS Admin</h5>
                    </div>
                </div>

                <div class="p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="text-blue fw-bold mb-0">System Settings</h2>
                            <p class="text-muted small">Manage gold stock and system configurations</p>
                        </div>
                    </div>

                    <div class="admin-light-card">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="text-blue fw-bold mb-0"><i class="bi bi-box-fill me-2"></i> Gold Inventory</h5>
                        </div>

                        <div class="table-responsive">
                            <table class="table admin-light-table mb-0">
                                <thead>
                                    <tr>
                                        <th>Item Type</th>
                                        <th>Quantity (Units)</th>
                                        <th>Total Weight (Grams)</th>
                                        <th class="text-end">Last Updated</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% stocks.forEach(stock=> { %>
                                        <tr>
                                            <td class="fw-bold text-blue">
                                                <%= stock.itemName %>
                                            </td>
                                            <td>
                                                <%= stock.quantity %> Units
                                            </td>
                                            <td class="fw-bold">
                                                <%= stock.weight %>g
                                            </td>
                                            <td class="text-muted text-end small">
                                                <%= stock.updatedAt ? stock.updatedAt.toLocaleDateString() : 'N/A' %>
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary border-0"
                                                    data-bs-toggle="modal" data-bs-target="#editStock<%= stock._id %>">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Edit Stock Modal -->
                                        <div class="modal fade" id="editStock<%= stock._id %>" tabindex="-1">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content border-0 shadow-lg">
                                                    <form action="/admin/stock/update" method="POST">
                                                        <input type="hidden" name="itemName"
                                                            value="<%= stock.itemName %>">
                                                        <div class="modal-header bg-blue text-white">
                                                            <h5 class="modal-title fw-bold">Update <%= stock.itemName %>
                                                                    Stock</h5>
                                                            <button type="button" class="btn-close btn-close-white"
                                                                data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body p-4">
                                                            <div class="mb-4">
                                                                <label class="form-label text-muted fw-bold">Total
                                                                    Quantity</label>
                                                                <input type="number" class="form-control"
                                                                    name="quantity" value="<%= stock.quantity %>"
                                                                    required>
                                                            </div>
                                                            <div class="mb-2">
                                                                <label class="form-label text-muted fw-bold">Total
                                                                    Weight (grams)</label>
                                                                <input type="number" step="0.01" class="form-control"
                                                                    name="weight" value="<%= stock.weight %>" required>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer border-0">
                                                            <button type="button" class="btn btn-light px-4"
                                                                data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-blue px-4">Save
                                                                Changes</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                            <% if (stocks.length===0) { %>
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted py-5">
                                                        Default inventory records not initialized.
                                                    </td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <%- include('../partials/footer') %>